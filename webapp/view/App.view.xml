<mvc:View
    controllerName="zgr.combatcalc.controller.App"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <App id="app">
        <Page title="{i18n>pageTitel}">
            <Panel id="idPanelCombatResult"  expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin"
                expand="onPanelCombatResultExpand">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>headerToolbarTitle}" />
                        <ToolbarSpacer />
                        <Input
                            id="idInputCombatResult"
                            visible="false"
                            valueState="None"
                            width="60%"
                        />
                        <!-- <ToolbarSpacer />
                        <Button
                            id="idButtonCalcCombatResult"
                            text="{i18n>ButtonCalcCombat}"
                            icon="sap-icon://simulate"
                            press="onButtonCalcCombatResultPressed"
                        /> -->
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <List id="idListCombatResult">
                        <InputListItem>
                            <Text text="{i18n>textAtt} | {i18n>textDef}" />
                        </InputListItem>

                        <!-- Unsaved Wounds -->
                        <InputListItem
                            label="{i18n>unsavedWoundsInflicted}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/unsavedWoundsAttacker}"
                            />
                            <Text
                                renderWhitespace="true"
                                text=" "
                            />
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/unsavedWoundsDefender}"
                            />
                        </InputListItem>

                        <!-- Rank Bonus -->
                        <InputListItem
                            label="{i18n>rankBonus}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/rankBonusAttacker}"
                            />
                            <Text
                                renderWhitespace="true"
                                text=" "
                            />
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/rankBonusDefender}"
                            />
                        </InputListItem>

                        <!-- Standard -->
                        <InputListItem
                            label="{i18n>standard}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/standardAttacker}"
                            />
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/standardDefender}"
                            />
                        </InputListItem>

                        <!-- Battle Standard -->
                        <InputListItem
                            label="{i18n>battleStandard}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/battleStandardAttacker}"
                            />
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/battleStandardDefender}"
                            />
                        </InputListItem>

                        <!-- Flank Attack -->
                        <InputListItem
                            label="{i18n>flankAttack}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/flankAttacker}"
                            />
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/flankDefender}"
                            />
                        </InputListItem>

                        <!-- Rear Attack -->
                        <InputListItem
                            label="{i18n>rearAttack}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/rearAttacker}"
                            />
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/rearDefender}"
                            />
                        </InputListItem>

                        <!-- High Ground -->
                        <InputListItem
                            label="{i18n>highGround}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/highGroundAttacker}"
                            />
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/highGroundDefender}"
                            />
                        </InputListItem>

                        <!-- Overkill -->
                        <InputListItem
                            label="{i18n>overkill}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/overkillAttacker}"
                            />
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/overkillDefender}"
                            />
                        </InputListItem>

                        <!-- Other -->
                        <InputListItem
                            label="{i18n>others}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/othersAttacker}"
                            />
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/othersDefender}"
                            />
                        </InputListItem>

                        <InputListItem
                            label="{i18n>labelCalcCombatResult}"
                            class="sapUiTinyMarginBottom"
                        >
                            <!-- Button Calc -->
                           <Button
                                id="idButtonCalcCombatResult"
                                text="{i18n>ButtonCalcCombat}"
                                icon="sap-icon://simulate"
                                press="onButtonCalcCombatResultPressed"
                            />
                        </InputListItem>
                    </List> 
                </content>
            </Panel>

            <Panel id="idPanelBreaktest" expandable="true" width="auto" class="sapUiResponsiveMargin"
                expand="onPanelBreakTestExpand">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>headerToolbarBreaktestTitle}" />
                        <ToolbarSpacer />
                        <Input
                            id="idInputBreakTest"
                            visible="false"
                            valueState="None"
                            width="60%"
                        />
                        <!-- <ToolbarSpacer />
                        <Button
                            id="idButtonCalcBreakTest"
                            text="{i18n>buttonCalcBreaktest}"
                            icon="sap-icon://physical-activity"
                            press="onButtonCalcBreakTestPressed"
                        /> -->
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <!-- Breaktest List -->
                    <List id="idListBreaktest">
                        <InputListItem
                            label="{i18n>leadershipLoser}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/leadershipLoser}"
                            />
                        </InputListItem>

                        <!-- Dice Roll -->
                        <InputListItem
                            label="{i18n>breaktestNaturalDiceroll}"
                        >
                            <StepInput
                                min="0"
                                width="125px"
                                value="{/breaktestNaturalDiceroll}"
                            />
                        </InputListItem>

                        <!-- Unbreakable -->
                        <InputListItem
                            label="{i18n>unbreakable}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/unbreakable}"
                            />
                        </InputListItem>

                        <!-- Stubborn -->
                        <InputListItem
                            label="{i18n>stubborn}"
                        >
                            <Switch
                                customTextOn="J"
                                customTextOff="N"
                                state="{/stubborn}"
                            />
                        </InputListItem>

                        <!-- Button Calc -->
                        <InputListItem
                            label="{i18n>labelCalcBreaktest}"
                            class="sapUiTinyMarginBottom"
                        >
                            <Button
                                id="idButtonCalcBreakTest"
                                text="{i18n>buttonCalcBreaktest}"
                                icon="sap-icon://physical-activity"
                                press="onButtonCalcBreakTestPressed"
                            />
                        </InputListItem>
                    </List>
                </content>
            </Panel>
        </Page>
    </App>
</mvc:View>
