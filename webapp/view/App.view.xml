<mvc:View
	controllerName="zgr.combatcalc.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	<App id="app">
		<Page title="TOW Combat Result Calculator">
			<List id="listCombatResult">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="Calculate Combat Result"/>
						<ToolbarSpacer/>
						<Text text="Attacker | Defender"/>
					</OverflowToolbar>
				</headerToolbar>

				<InputListItem label="{i18n>unsavedWoundsInflicted}" class="sapUiTinyMarginBottom">
					<StepInput min="0" width="125px" value="{/unsavedWoundsAttacker}"/>
					<Text renderWhitespace="true" text=" "/>
					<StepInput id="idUnsavedWoundsDefender" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="Rank Bonus" class="sapUiTinyMarginBottom">
					<StepInput id="idRankAttacker" min="0" width="125px"/>
					<Text renderWhitespace="true" text=" "/>
					<StepInput id="idRankDefender" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="Standard" class="sapUiTinyMarginBottom">
					<Switch id="idStandardAttacker" customTextOn="J" customTextOff="N"/>
					<Switch id="idStandardDefender" customTextOn="J" customTextOff="N"/>
				</InputListItem>

				<InputListItem label="BattleStandard" class="sapUiTinyMarginBottom">
					<Switch id="idBattleStandardAttacker" customTextOn="J" customTextOff="N"/>
					<Switch id="idBattleStandardDefender" customTextOn="J" customTextOff="N"/>
				</InputListItem>

				<InputListItem label="Flank Attack" class="sapUiTinyMarginBottom">
					<Switch id="idFlankAttacker" customTextOn="J" customTextOff="N"/>
					<Switch id="idFlankDefender" customTextOn="J" customTextOff="N"/>
				</InputListItem>

				<InputListItem label="Rear Attack" class="sapUiTinyMarginBottom">
					<Switch id="idRearAttacker" customTextOn="J" customTextOff="N"/>
					<Switch id="idRearDefender" customTextOn="J" customTextOff="N"/>
				</InputListItem>

				<InputListItem label="High Ground" class="sapUiTinyMarginBottom">
					<Switch id="idHighGroundAttacker" customTextOn="J" customTextOff="N"/>
					<Switch id="idHighGroundDefender" customTextOn="J" customTextOff="N"/>
				</InputListItem>

				<InputListItem label="Overkill" class="sapUiTinyMarginBottom">
					<StepInput id="idOverkillAttacker" min="0" width="125px"/>
					<StepInput id="idOverkillDefender" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="Others" class="sapUiTinyMarginBottom">
					<StepInput id="idOthersAttacker" min="0" width="125px"/>
					<StepInput id="idOthersDefender" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="" class="sapUiTinyMarginBottom">
					<Button
						id="idButtonCalcCombatResult"
						text="Calculate Combat Result"
						icon="sap-icon://simulate"
						press="onButtonCalcCombatResultPressed"/>
				</InputListItem>
			</List>
			<List
				id="idListBreakTest"
				visible="true">
				
				<InputListItem label="Leadership Loser" class="sapUiTinyMarginBottom">
					<StepInput id="idLeadership" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="Break Test Dice Roll" class="sapUiTinyMarginBottom">
					<StepInput id="idDiceroll" min="0" width="125px"/>
				</InputListItem>

				<InputListItem label="" class="sapUiTinyMarginBottom">
					<Button
						id="idButtonCalcBreakTest"
						text="Calculate Break Test Result"
						icon="sap-icon://physical-activity"
						press="onButtonCalcBreakTestPressed"/>
				</InputListItem>
			</List>
		</Page>
	</App>
</mvc:View>