<mvc:View
    controllerName="zgr.combatcalc.controller.App"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
>
    <App id="app">
        <Page title="{i18n>pageTitel}">
            <List id="idListCombatResult">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>headerToolbarTitle}" />
                        <ToolbarSpacer />
                        <Text text="{i18n>textAtt} | {i18n>textDef}" />
                    </OverflowToolbar>
                </headerToolbar>

                <InputListItem
                    label="{i18n>unsavedWoundsInflicted}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/unsavedWoundsAttacker}"
                    />
                    <Text
                        renderWhitespace="true"
                        text=" "
                    />
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/unsavedWoundsDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>rankBonus}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/rankBonusAttacker}"
                    />
                    <Text
                        renderWhitespace="true"
                        text=" "
                    />
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/rankBonusDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>standard}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/standardAttacker}"
                    />
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/standardDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>battleStandard}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/battleStandardAttacker}"
                    />
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/battleStandardDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>flankAttack}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/flankAttacker}"
                    />
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/flankDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>rearAttack}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/rearAttacker}"
                    />
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/rearDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>highGround}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/highGroundAttacker}"
                    />
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/highGroundDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>overkill}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/overkillAttacker}"
                    />
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/overkillDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>others}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/othersAttacker}"
                    />
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/othersDefender}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>labelCalcCombatResult}"
                    class="sapUiTinyMarginBottom"
                >
                    <Input
                        id="idInputCombatResult"
                        visible="false"
                        valueState="None"
                        width="60%"
                    />
                    <Button
                        id="idButtonCalcCombatResult"
                        text="{i18n>ButtonCalcCombat}"
                        icon="sap-icon://simulate"
                        press="onButtonCalcCombatResultPressed"
                    />
                </InputListItem>
            </List>
            <List
                id="idListBreaktest"
                visible="false"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>headerToolbarBreaktestTitle}" />
                        <ToolbarSpacer />
                        <Text text="{i18n>textAtt} | {i18n>textDef}" />
                    </OverflowToolbar>
                </headerToolbar>
                <InputListItem
                    label="{i18n>leadershipLoser}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/leadershipLoser}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>breaktestNaturalDiceroll}"
                    class="sapUiTinyMarginBottom"
                >
                    <StepInput
                        min="0"
                        width="125px"
                        value="{/breaktestNaturalDiceroll}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>unbreakable}"
                    class="sapUiTinyMarginBottom"
                >
                    <Switch
                        customTextOn="J"
                        customTextOff="N"
                        state="{/unbreakable}"
                    />
                </InputListItem>

                <InputListItem
                    label="{i18n>labelCalcBreaktest}"
                    class="sapUiTinyMarginBottom"
                >
                    <Input
                        id="idInputBreakTest"
                        visible="false"
                        valueState="None"
                        width="60%"
                    />
                    <Button
                        id="idButtonCalcBreakTest"
                        text="{i18n>buttonCalcBreaktest}"
                        icon="sap-icon://physical-activity"
                        press="onButtonCalcBreakTestPressed"
                    />
                </InputListItem>
            </List>
        </Page>
    </App>
</mvc:View>
